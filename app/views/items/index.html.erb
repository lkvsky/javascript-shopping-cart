<% @items.each do |item| %>
  <div id="item_<%= item.id %>">
    <h3><%= item.name %></h3>
    <img src="<%= item.picture_url %>">
    <p><strong>Price: </strong><%= number_to_currency(item.price) %></p>
    <div data-item-id="<%= item.id %>">
      <form class="form-inline animal-form">
        <input class="quantity" type="number" value="1"></input>
        <button type="button" class="btn btn-primary add-to-cart">Add to Cart</button>
      </form>
    </div>
  </div>
<% end %>