<!DOCTYPE html>
<html>
<head>
  <title>Store</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

  <div class="container">
    <div class="row">
      <div class="span6">
        <div id="left">
          <%= yield %>
        </div>
      </div>
      <div class="span4">
        <h3>Shopping Cart</h3>
        <div id="shopping-cart"></div>
        <div id="checkout">
          <hr>
          <h4>Total</h4>
          <p>$<span id="cart-total">0</span>.00</p>
          <button id="checkout-button" class="btn btn-primary" type="button">Checkout</button>
        </div>
        <div id="submit-order">
          <hr>
          <h4>Place Your Order</h4>
          <%= simple_form_for @order, :remote => true do |f| %>
            <%= f.input :name %>
            <%= f.input :email %>
            <%= f.input :address %>
            <%= f.input :city %>
            <%= f.input :state %>
            <%= f.input :zip %>
            <%= simple_fields_for :order_items, :id=>"order-items" do |order_item_f| %>
              <div id="order-items">
              </div>
            <% end %>

            <%= f.submit "Submit Order", :class => "btn btn-primary", :confirm => "Ready to take us home?" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>

</body>
</html>
